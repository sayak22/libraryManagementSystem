<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e272e"
    android:gravity="center_vertical"
    tools:context=".signup">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Heading"
        android:text="Sign-in"
        android:layout_marginLeft="20dp"
        />
    <View
        android:id="@+id/underline"
        android:layout_width="90dp"
        android:layout_height="4dp"
        android:background="@drawable/roundedgreenbox"
        android:layout_below="@+id/heading"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="50dp"
        />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:background="@drawable/roundedgreenbox"
        android:layout_below="@+id/underline"
        android:layout_marginLeft="20dp"
        android:hint="Full Name"
        />

    <Spinner
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_below="@+id/underline"
        android:padding="10dp"
        android:layout_marginLeft="20dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/roundedgreenbox"
        android:entries="@array/usertype"
        android:layout_toRightOf="@+id/fullname"/>

    <EditText
        android:id="@+id/mail"
        android:hint="Institute mail"
        android:background="@drawable/roundedgreenbox"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_below="@id/fullname"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/phonenumber"
        android:hint="Phone number"
        android:background="@drawable/roundedgreenbox"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_below="@id/fullname"
        android:layout_toRightOf="@+id/mail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="phone" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:background="@drawable/roundedgreenbox"
        android:padding="10dp"
        android:hint="Set Password"
        android:layout_below="@id/mail"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signupbtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="sign up"
        android:layout_below="@id/password"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/roundedgreenbox"/>
    <TextView
        android:id="@+id/gotologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signupbtn"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="Already a user? Log in"
        android:textColor="#0be881"
        android:textSize="15sp"/>


</RelativeLayout>